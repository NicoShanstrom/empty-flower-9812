<h1> <%= @mechanic.name %> Info </h1>
<h3> Years of experience: <%= @mechanic.years_experience %></h3>

<h2>Rides working on</h2>
<section class='rides'>
  <ol>
    <% @mechanic.rides.each do |ride| %>
    <li>
      <h3>Ride name: <%= ride.name %></h3>
    </li>
    <%end%>
  </ol>
</section>

<h2>Add existing ride to <%=@mechanic.name%> workload</h2>
  <section class='addride'>
    <%= form_with url: mechanic_rides_path(@mechanic), method: :post, data: {turbo: false} do |f| %>
    <%= f.label :ride_id, "Ride Id:" %>
    <%= f.text_field :ride_id %>

    <%= f.submit "Add ride" %>
    <%end%>
  </section>